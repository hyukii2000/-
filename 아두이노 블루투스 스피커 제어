#include <SoftwareSerial.h>

SoftwareSerial bluetooth(2, 3);  // RX, TX 핀 설정

void setup() {
  bluetooth.begin(9600);  // 블루투스 통신 속도 설정
}

void loop() {
  if (bluetooth.available()) {
    char command = bluetooth.read();  // 블루투스로부터 수신한 명령 읽기
    if (command == 'P') {
      // 블루투스로부터 'P' 명령을 수신하면
      // 라즈베리파이로 블루투스 오디오 재생 명령 전송
      bluetooth.write("Play");  // 재생 명령 전송
    }
  }
}
