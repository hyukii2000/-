// 블루투스 스피커를 연결하기 위해 먼저 블루투스 모듈을 설치합니다.
sudo apt-get update
sudo apt-get install bluetooth
sudo apt-get install bluez
sudo apt-get install python-bluez

// 블루투스 스피커 스캔
sudo hcitool scan

// 블루투스 카메라 모듈 활성화
sudo raspi-config  // 이후, Interfacing Options > Camera > Enable 을 선택하고 재부팅

// 다음으로 파이썬 코드에서 블루투스 모듈을 import하고 스피커를 검색합니다.
import bluetooth

nearby_devices = bluetooth.discover_devices()
for device in nearby_devices:
    print(device)
    
// 검색된 디바이스 출력
for bdaddr in nearby_devices:
    print(bluetooth.lookup_name(bdaddr), " : ", bdaddr)
    
// 블루투스 스피커 주소 입력
speaker_address = "블루투스 스피커 주소"

// 블루투스 스피커 연결
sock = bluetooth.BluetoothSocket(bluetooth.RFCOMM)
sock.connect((speaker_address, 1))

// 스피커 제어
import time
import RPi.GPIO as GPIO

// 블루투스 스피커 주소 입력
speaker_address = "블루투스 스피커 주소"

// 블루투스 스피커 연결
sock = bluetooth.BluetoothSocket(bluetooth.RFCOMM)
sock.connect((speaker_address, 1))

// GPIO 설정
GPIO.setmode(GPIO.BCM)
GPIO.setup(18, GPIO.OUT)

// 다음으로 파이썬 코드에서 picamera 라이브러리를 import하여 카메라를 제어합니다.
from picamera import PiCamera

camera = PiCamera()
camera.start_preview()
camera.capture('image.jpg')
camera.stop_preview()
